# ============================================================================
# VTU Diary Automation v3.0 — Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it contains secrets)

# ============================================================================
# LLM PROVIDER
# ============================================================================
# Options: auto, groq, gemini, cerebras, openai
# Set to "auto" to enable automatic fallback chain (recommended)
LLM_PROVIDER=auto

# Groq (FREE — 14,400 requests/day, blazing fast)
# Get your key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_key_here

# Google Gemini (FREE — 20 requests/day)
# Get your key: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_key_here

# Cerebras (PAID — fastest inference)
# Get your key: https://cloud.cerebras.ai
CEREBRAS_API_KEY=your_cerebras_key_here

# OpenAI (PAID — most capable)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# ============================================================================
# VTU PORTAL CREDENTIALS
# ============================================================================
# Your VTU Internyet portal login
PORTAL_LOGIN_URL=https://vtu.internyet.in/sign-in
VTU_EMAIL=your_vtu_email@example.com
VTU_PASSWORD=your_vtu_password

# ============================================================================
# BROWSER AUTOMATION
# ============================================================================
# Run browsers in headless mode (no visible window)
HEADLESS=true

# Max parallel browser contexts (Playwright sequential mode ignores this)
MAX_PARALLEL_BROWSERS=2

# Delay between submissions (seconds)
SUBMISSION_DELAY_SECONDS=3.0

# ============================================================================
# AI PROCESSING
# ============================================================================
# Batch size — higher means fewer API calls (saves quota)
# With BATCH_SIZE_DAYS=20, even 50 dates = 3 API calls max
BATCH_SIZE_DAYS=20

# Confidence threshold for auto-approve (0-1)
CONFIDENCE_THRESHOLD=0.75

# Default hours per day when not specified
DEFAULT_HOURS_PER_DAY=7.0

# Entry word count limits (AI enforces this)
MIN_ENTRY_WORDS=150
MAX_ENTRY_WORDS=200

# ============================================================================
# DATE MANAGEMENT
# ============================================================================
# Skip weekends and holidays when generating date ranges
SKIP_WEEKENDS=true
SKIP_HOLIDAYS=true

# Country code for holiday calendar (IN = India)
DEFAULT_COUNTRY=IN

# Maximum date range allowed (safety limit)
MAX_DATE_RANGE_DAYS=90

# ============================================================================
# WEB SERVER
# ============================================================================
API_HOST=0.0.0.0
API_PORT=5000
DEBUG_MODE=false

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable screenshots on errors
ENABLE_SCREENSHOTS=true

# Enable database caching for skills
ENABLE_CACHING=true

# Whisper model for audio transcription (tiny, base, small, medium, large)
WHISPER_MODEL=base
WHISPER_LANGUAGE=en

# ============================================================================
# ADVANCED
# ============================================================================
# Max retries for LLM calls
LLM_MAX_RETRIES=3

# Max retries for browser submissions
MAX_SUBMISSION_RETRIES=3

# Retry backoff factor
RETRY_BACKOFF_FACTOR=2.0

# Database URL (default: SQLite in project root)
# DATABASE_URL=sqlite:///vtu_automation.db
# DATABASE_URL=postgresql://user:pass@localhost/vtudb

# Browser engine (playwright or selenium)
BROWSER_ENGINE=playwright

# Browser profile name for session persistence
BROWSER_PROFILE=default
