# LLM Config
LLM_PROVIDER=mock # mock, gemini, or openai
GEMINI_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here

# Security
AUDIT_SECRET_KEY=your_32_byte_base64_encryption_key
FLASK_SECRET_KEY=something_random

# Selenium
SELENIUM_HEADLESS=false

# VTU Portal URL
# The official VTU Internyet portal login page
PORTAL_LOGIN_URL=https://vtu.internyet.in/sign-in

# VTU Portal Credentials (optional - for automated login)
# If provided, the system will attempt to login automatically
# If left empty or auto-login fails, you'll be prompted to login manually
VTU_EMAIL=your_vtu_email@example.com
VTU_PASSWORD=your_password_here

# Logging
LOG_LEVEL=INFO
ENV=development
